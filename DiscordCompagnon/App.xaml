                                                                    TargetType="Button">
                                                                    <Grid
                                                                        Width="24"
                                                                        Height="24"
                                                                        Background="#01000000">
                                                                        <Ellipse
                                                                            Name="back" />
                                                                        <TextBlock
                                                                            FontSize="12"
                                                                            VerticalAlignment="Center"
                                                                            HorizontalAlignment="Center"
                                                                            Foreground="#dbdee1">
                                                                            ▶
                                                                        </TextBlock>
                                                                    </Grid>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger
