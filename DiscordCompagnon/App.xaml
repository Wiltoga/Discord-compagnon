                                                        Height="Auto" />
                                                    <RowDefinition
                                                        Height="Auto" />
                                                </Grid.RowDefinitions>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <DataTrigger
                                            Binding="{Binding DisplayMode,
                                            RelativeSource={RelativeSource FindAncestor,
                                            AncestorType={x:Type Calendar}}}"
                                                    Value="Year">
                                            <Setter
                                                Property="Visibility"
                                                TargetName="PART_MonthView"
                                                Value="Hidden" />
                                            <Setter
                                                Property="Visibility"
                                                TargetName="PART_YearView"
                                                Value="Visible" />
                                        </DataTrigger>
                                        <DataTrigger
                                            Binding="{Binding DisplayMode,
                                            RelativeSource={RelativeSource FindAncestor,
                                            AncestorType={x:Type Calendar}}}"
                                            Value="Decade">
