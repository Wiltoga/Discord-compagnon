        <Style
            TargetType="ToolTip"
            BasedOn="{StaticResource baseStyle}">
            <Setter
                Property="Foreground"
                Value="#dbdee1" />
            <Setter
                Property="FontSize"
                Value="14" />
            <Setter
                Property="Template">
                <Setter.Value>
                    <ControlTemplate
                        TargetType="ToolTip">
                        <Border
                            Background="#313338"
                            BorderThickness="1"
                            BorderBrush="#8666"
                            Padding="5,2">
                            <ContentPresenter
                                Content="{TemplateBinding Content}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
